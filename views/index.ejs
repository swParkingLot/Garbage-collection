<script>
  
  function post_postion(){

    
    $.ajax({
      url : '/write',
      dataType: 'json',
      type: POST,
      data:{
        //submit 누를시 보낼 데이터
        Content : $('#opinion_txt').val(), // 문의
        Grade : $('#title').val(), //평점 -> 고민해보기
        PostionLat : $('#lat').val(), //경도
        PostionLng : $('#lng').val() //위도
        
      },
      success: function(result){
        if(result.msg == 'success'){
          alert('글이 등록 되었습니다.')
        } else{
          alert(result.msg);
        }
      }
    });
  }
</script>